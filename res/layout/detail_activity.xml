<?xml version="1.0" encoding="utf-8"?>




<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:backgroundTint="@color/fullname"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/user_image_header"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:layout_marginStart="10dp"
        android:text="@string/Username"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/user_image_header"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/header"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">




        <LinearLayout
            android:background="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Followers"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/followers_view"
                android:text="data"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                />




        </LinearLayout>
        <LinearLayout
            android:background="@color/icon_tint_selected"
        android:layout_width="0dp"
        android:layout_height="match_parent"
            android:layout_weight="1"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Following"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
      />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/following_view"
                android:text="data"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                />

    </LinearLayout>



    </LinearLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/userbio"
    android:text="bio"
    android:gravity="center_horizontal"
    android:textStyle="bold"/>







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/githublink"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:text="@string/Link"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/username"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/link"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/githublink"/>


<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="MORE"
    android:id="@+id/more_button"
    android:onClick="moreButton"/>
</LinearLayout>

</ScrollView>
